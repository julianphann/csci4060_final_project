<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="#E6E6FA">

    <!-- App Logo -->
    <ImageView
        android:id="@+id/logo_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/logo_image"
        android:contentDescription="Juum Logo"
        android:layout_gravity="center" />

    <!-- Welcome Message -->
    <TextView
        android:id="@+id/welcome_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#483D8B"
        android:layout_marginTop="16dp"
        android:gravity="center" />

    <!-- App Description -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Juum helps students share rides and earn points."
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="#6A5ACD"
        android:layout_marginTop="8dp"
        android:gravity="center"/>

    <!-- Username Input -->
    <EditText
        android:id="@+id/email_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textColorHint="#7B68EE"
        android:backgroundTint="#9370DB"
        android:layout_marginTop="24dp"
        android:paddingVertical="12dp"/>

    <!-- Password Input -->
    <EditText
        android:id="@+id/password_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColorHint="#7B68EE"
        android:backgroundTint="#9370DB"
        android:layout_marginTop="16dp"
        android:paddingVertical="12dp"/>

    <!-- Forgot Password Link -->
    <TextView
        android:id="@+id/forgot_password_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password?"
        android:textColor="#8A2BE2"
        android:textStyle="italic"
        android:layout_marginTop="8dp"
        android:gravity="end"/>

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="24dp">

        <Button
            android:id="@+id/cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textColor="#FFFFFF"
            android:backgroundTint="#778899"
            android:layout_marginEnd="16dp"
            android:paddingHorizontal="24dp"
            android:paddingVertical="12dp"/>

        <Button
            android:id="@+id/login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textColor="#FFFFFF"
            android:backgroundTint="#8A2BE2"
            android:paddingHorizontal="24dp"
            android:paddingVertical="12dp"/>
        </LinearLayout>
</LinearLayout>

