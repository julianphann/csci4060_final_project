<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFF"
    android:elevation="2dp"
    android:layout_marginBottom="8dp">

    <!-- Status (BIG and at the TOP) -->
    <TextView
        android:id="@+id/text_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status: pending"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <!-- Accepted By -->
    <TextView
        android:id="@+id/text_accepted_by"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accepted by: Not accepted yet"
        android:textColor="#555"
        android:layout_marginBottom="8dp"/>

    <!-- User Email -->
    <TextView
        android:id="@+id/text_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Posted by: user@example.com"
        android:textColor="#333"
        android:textStyle="italic"
        android:layout_marginBottom="4dp"/>

    <!-- Destination -->
    <TextView
        android:id="@+id/text_destination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To: Athens"
        android:textStyle="bold" />

    <!-- Pickup -->
    <TextView
        android:id="@+id/text_pickup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="From: Atlanta" />

    <!-- Ride Type -->
    <TextView
        android:id="@+id/text_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Type: offer"
        android:textColor="#008577"
        android:textStyle="italic" />

    <!-- Date/Time -->
    <TextView
        android:id="@+id/text_date_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date/Time: 2025-05-01 13:00" />

    <!-- Accept Button -->
    <Button
        android:id="@+id/button_accept_ride"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accept Ride"
        android:textColor="@android:color/white"
        android:padding="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_background" />  <!-- Default button background -->

</LinearLayout>

